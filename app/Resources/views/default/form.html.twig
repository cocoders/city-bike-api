{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2>Docking stations edit page</h2>
        <br>

        {{ form_start(form) }}
        <div class="row">
            <div class="col-xs-1">
                {{ form_widget(form.id, {'attr': {'class': 'form-control', 'placeholder': 'ID'}}) }}
            </div>
            <div class="col-xs-2">
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Name'}}) }}
            </div>
            <div class="col-xs-2">
                {{ form_widget(form.lat, {'attr': {'class': 'form-control', 'placeholder': 'Latitude'}}) }}
            </div>
            <div class="col-xs-2">
                {{ form_widget(form.long, {'attr': {'class': 'form-control', 'placeholder': 'Longitude'}}) }}
            </div>
            <div class="col-xs-2">
                {{ form_widget(form.Save, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>
        <br>

        <a href=""></a>
        {% if app.session.flashbag.has('notice') %}
            <div class="row">
                <div class="col-md-4 col-md-offset-3">
                    <div class="alert alert-success" role="alert">
                        {% for flashMessage in app.session.flashbag.get('notice') %}
                            <div class="flash-notice">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}

        {{ form_widget(form) }}
        {{ form_end(form) }}

            <div class="row">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Station name</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Available bikes
                            <br>
                            <a href="{{ url('refresh_stations') }}" class="btn btn-primary btn-xs">refresh</a>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for station in stations %}
                    <tr>
                        <td>{{ station.id }}</td>
                        <td>{{ station.name }}</td>
                        <td>{{ station.position.lat }}</td>
                        <td>{{ station.position.long }}</td>
                        <td>{{ station.availableBikes }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
    </div>
{% endblock %}